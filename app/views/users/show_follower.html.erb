<div class="body">
  <div class="container">
    <h2>Follower Users</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @user.followers.each do |user| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image1.jpg" %></td>
          <td><%= user.name %> </td>
          <td>フォロー数:<%= user.following.count %></td>
          <td>フォロワー数:<%= user.followers.count %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
