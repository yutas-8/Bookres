
<div class="body">
   <div class="container">
      <p id="notice"><%= notice %></p>
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>

         <% if @user.errors.any? %>
         <div id="error_explanation">
            <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
               <li><%= message %></li>
            <% end %>
            </ul>
         </div>
         <% end %>

         <div class="field">
            <label for="user_name">Name</label>
            <%= f.text_field :name, class: "name", id: "user_name" %>
         </div>
         <div class="field">
            <label for="user_image">Image</label>
            <%= f.attachment_field :profile_image, class: "user_image", id: "user_profile_image" %>
         </div>
         <div class="field">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, class: "introduction", id: "user_introduction" %>
         </div>
         <div class="actions">
            <%= f.submit "Update User" %>
         </div>

      <% end %>
   </div>
</div>