<div class="body">
   <div class="container">
      <p id="notice"></p>
      <%= notice %>
      <div class="row">
         <%= render "users/col-xs-3", user: @user %>
         <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table">
               <tbody>
                  <tr>
                     <td>
                        <%= link_to user_path(@user.id) do %>
                           <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: "jpeg", fallback: "no_image.jpg" %>
                           <br>
                           <%= @user.name %>
                        <% end %>
                     </td>
                     <td>
                        <%= link_to book_path(@books.id) do %>
                           <%= @books.title %>
                        <% end %>
                     </td>
                     <td><%=@books.body %></td>
                     <!--いいね実装-->
                     <% if @books.favorited_by?(current_user) %>
                     <td>
                        <%= link_to book_favorites_path(@books),method: :delete do %>
                           <i class= "fa fa-heart" aria-hidden= "true" style= "color: red;"></i>
                           <%= @books.favorites.count %>いいね
                        <% end %>
                     </td>
                     <% else %>
                      <td>
                        <%= link_to book_favorites_path(@books),method: :post do %>
                           <i class= "fa fa-heart-o" aria-hidden= "true"></i>
                           <%= @books.favorites.count %>いいね
                        <% end %>
                     </td>
                     <% end %>
                     <!--いいね実装-->
                     <!--コメント実装-->
                     <td>
                        <i class = "fa fa-comment"></i>
                        <a href = "#comments"><%= @books.book_comment.count %></a>
                     </td>
                     <!--コメント実装-->
                     <% if @user.id == current_user.id %>
                        <td>
                           <%= link_to "Edit", edit_book_path(@books), class: "btn-sm btn-success" %>
                        </td>
                        <td>
                           <%= link_to "Destroy", book_path(@books), class: "btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
                        </td>
                     <% end %>
                  </tr>
               </tbody>
            </table>
            <!--コメント-->
            <ol>
               <% @books.book_comment.each do |book_comment| %>
                  <li id="#comment">
                     <div class="comment-body bb">
                        <div class="comment-avatar">
                           <div calss="avatar">
                              <%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: "jpeg", fallback: "no_image.jpg" %>
                           </div>
                        </div>
                        <div class="comment-text">
                           <div class="comment-author clearfix">
                              <a href="#" class="link-author"><%= book_comment.user.name %></a>
                              <span class="comment-meta">
                                 <span class="comment-date"><%= book_comment.created_at.strftime("%Y/%m/%d") %></span>
                              </span>
                           </div>
                           <div class="comment-entry"><%= book_comment.comment %></div>
                           <% if book_comment.user == current_user %>
                              <div>
                                 <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger pull-right" %>
                              </div>
                           <% end %>
                        </div>
                     </div>
                  </li>
               <% end %>
            </ol>
            
            <%= form_with(model:[@books, @book_comment], local: true) do |f| %>
               <div class="row">
                  <div class="col-sm-9">
                     <%= f.text_area :comment, rows:"1", class: "form-control", placeholder: "コメントはここに" %>
                  </div>
               </div>
               <%= f.submit "送信", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
            <% end %>
            <!--コメント-->
         </div>
      </div>
   </div>
</div>