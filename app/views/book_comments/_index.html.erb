<% books.book_comment.each do |book_comment| %>
    <% book_comment_user = book_comment.user %>
    <tr>
        <td>
            <%= link_to user_path(book_comment_user), class: "user_#{book_comment_user.id}" do %>
                <%= attachment_image_tag book_comment_user, :profile_image, :fill, 50, 50, format: "jpeg", fallback: "no_image.jpg" %>
                <%= book_comment.user.name %>
            <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <td><%= book_comment.created_at.strftime("%Y/%m/%d") %></td>
        <% if current_user == book_comment_user %>
            <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %></td>
        <% end %>    
    </tr>
<% end %>